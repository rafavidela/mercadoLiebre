<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo-mercado-liebre.svg">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/search" method="GET" class="search-form">
                    <input type="text" name="keywords" placeholder="Buscar productos, marcas y más" class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4 d-flex">
                <a href="#" class="main-header_credit-link col-9">
                    <i class="fas fa-hand-holding-usd"></i> Comprá en cuotas y sin tarjeta de crédito
                </a>
                <div class="col-4">
                    <% if (usuarioLogueado!=undefined) { %>

                        <img class="justify-content-center" src="/images/users/<%= usuarioLogueado.image %>" style="border-radius: 50%;" alt="Imagen de usuario">
                        <div class="row justify-content-center">
                            <%= usuarioLogueado.name %>
                        </div>
                        <% } else { %>
                            <img src="/images/profile.png" class="imgProfile justify-content-center col-11" id="imgProfile" width="35px" alt="Imagen de usuario">
                            <% } %>
                </div>
            </div>
        </div>

        <button class="btn-toggle-navbar">

			<i class="fas fa-bars"></i>
		</button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/products">Todos los productos</a></li>
                <li><a href="/products/onsale">Ofertas</a></li>
                <li><a href="#">Tiendas Oficiales</a></li>
                <li><a href="/products/create">Vender</a></li>
                <li><a href="#">Ayuda</a></li>
            </ul>

            <ul class="right-navbar">
                <% if (usuarioLogueado==undefined) { %>

                    <li><a href="/users/register">Creá tu cuenta <i class="far fa-address-card"></i></a></li>
                    <li><a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a></li>
                    <% }else { %>

                        <li><a href="#">Mis compras <i class="fas fa-shopping-basket"></i></a></li>
                        <li><a href="/users/logout">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></li>
                        <% } %>
            </ul>
        </nav>
    </div>
</header>
<script>
    const toThousand = n => n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")
</script>